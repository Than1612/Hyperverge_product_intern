# Environment Configuration for Rural Loan AI

# Application Settings
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/rural_loan_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rural_loan_ai
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
AI_SERVICE_URL=http://localhost:5000
MODEL_PATH=./models

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET=rural-loan-documents
S3_ENDPOINT=https://s3.ap-south-1.amazonaws.com

# Twilio Configuration (SMS/OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@ruralloanai.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_UNDERWRITING=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_OFFLINE_MODE=true
ENABLE_FRAUD_DETECTION=true
ENABLE_BIOMETRIC_AUTH=true

# Loan Configuration
MIN_LOAN_AMOUNT=5000
MAX_LOAN_AMOUNT=100000
DEFAULT_INTEREST_RATE=0.15
MAX_LOAN_DURATION=24

# Risk Assessment
RISK_SCORE_THRESHOLD_LOW=0.8
RISK_SCORE_THRESHOLD_MEDIUM=0.6
RISK_SCORE_THRESHOLD_HIGH=0.4

# Document Processing
OCR_SERVICE_URL=http://localhost:5001
DOCUMENT_VERIFICATION_ENABLED=true
FACE_MATCHING_ENABLED=true

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MIN_ANDROID_VERSION=7.0
MIN_IOS_VERSION=12.0

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Third-party Integrations
CREDIT_BUREAU_API_KEY=your-credit-bureau-key
BANK_API_KEY=your-bank-api-key
GOVERNMENT_API_KEY=your-gov-api-key

# Development/Testing
ENABLE_MOCK_SERVICES=false
MOCK_AI_RESPONSES=false
TEST_MODE=false

# Production Settings (Override in production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
TRUSTED_PROXIES=127.0.0.1,::1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rural-loan-backups

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,te,ta,bn,gu,mr,kn,ml,pa,or,as
TIMEZONE=Asia/Kolkata

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true

# Performance
CLUSTER_MODE=false
WORKER_PROCESSES=4
MEMORY_LIMIT=512m

# Debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false
PROFILING_ENABLED=false
